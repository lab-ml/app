{
  "name": "ui",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/d3": "^5.7.2",
    "@types/node": "latest",
    "browserify": "^17.0.0",
    "sass": "latest",
    "typescript": "latest",
    "uglify-js": "^3.12.8"
  },
  "dependencies": {
    "d3": "^5.16.0"
  },
  "scripts": {
    "build": "$npm_execpath run build:ui && $npm_execpath run build:sass && $npm_execpath run build:bundle",
    "watch": "$npm_execpath run watch:ui & $npm_execpath run watch:sass",
    "build:bundle": "browserify dist/ui/src/main.js > static/js/bundle.js && uglifyjs -c -m -- static/js/bundle.js > static/js/bundle.min.js",
    "build:ui": "tsc -p tsconfig.json",
    "watch:ui": "tsc -w -p tsconfig.json",
    "build:sass": "sass ui/src/style.scss:static/css/style.css",
    "watch:sass": "sass --watch ui/src/style.scss:static/css/style.css",
    "clean": "rm -rf static/"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
